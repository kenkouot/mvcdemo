extends layout

block content
  .row
    .twelve.columns
      h1= title
  form.custom
    .row
      .twelve.columns
        input.five(type='text', placeholder='Item Name', name='item_name', ng-model='itemName')
        input.one(type='text', placeholder='Qty', name='amount', ng-model='itemAmount')
    .row
      .two.columns
        select(style='display:none')
          option(selected) Food
          option Toiletries
          option Medicine
          option Pet Food
          option Hardware

        .custom.dropdown
          a(href='#', ng-model='itemType').current Type
          a.selector(href='#')
          ul
            li Food
            li Toiletries
            li Medicine
            li Pet Food
            li Hardware
      .nine.columns
        button#add-item.radius.button(ng-click='addItem(itemName, itemAmount)') Add to list
  #list.row
    table.twelve
      thead
        tr
          th Item Name
          th Quantity
          th Type
          th Date Added
          th Remove
      tbody.items

  #list-angular.row 
    table.twelve
      thead
        tr
          th Item Name
          th Quantity
          th Type
          th Date Added
          th Remove
      tbody.items
        tr(ng-repeat='item in list')
          td: span(contenteditable, data-prop='item_name', item-click, item-keydown='{{item}}') {{ item.item_name }}
          td: span(contenteditable, data-prop='amount') {{ item.amount }}
          td: span(contenteditable, data-prop='type') {{ item.type }}
          td {{ item.date }}
          td: span.alert.button.small(ng-click='removeItem(item)') Remove



